{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "detailed": {
      "format": "[ %(levelname)s ] - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "simple": {
      "format": "%(levelname)s: %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "detailed",
      "filename": "logs/file.log",
      "maxBytes": 1048576,
      "backupCount": 5
    }
  },
  "loggers": {
    "combo_logger": {
      "handlers": ["console", "file"],
      "level": "DEBUG",
      "propagate": false
    },
    "file_only_logger": {
      "handlers": ["file"],
      "level": "DEBUG",
      "propagate": false
    },
    "console_only_logger": {
      "handlers": ["console"],
      "level": "DEBUG",
      "propagate": false
    }
  }
}
